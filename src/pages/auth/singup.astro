---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Admin">
    <div class="doctor-dashboard">
        <h2>Panel de Citas</h2>
        <table class="appointments-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Paciente</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2024-11-10</td>
                    <td>10:00 AM</td>
                    <td>Juan Pérez</td>
                    <td>
                        <button class="aceptar-boton">Aceptar Cita</button>
                    </td>
                </tr>
                <tr>
                    <td>2024-11-10</td>
                    <td>11:00 AM</td>
                    <td>Maria López</td>
                    <td>
                        <button class="aceptar-boton">Aceptar Cita</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Ventana emergente para la confirmación -->
    <div id="ventanaEmergente" class="ventana-emergente">
        <div class="contenido-ventana">
            <p class="mensaje-confirmacion">La cita ha sido aceptada.</p>
            <button onclick="cerrarVentana()" class="cerrar-boton">Cerrar</button>
        </div>
    </div>

    <script is:inline>
        document.addEventListener("DOMContentLoaded", function() {
            // Obtener todos los botones de "Aceptar Cita"
            const botonesAceptar = document.querySelectorAll('.aceptar-boton');

            // Función para aceptar la cita
            botonesAceptar.forEach((boton) => {
                boton.addEventListener('click', function() {
                    this.innerText = "Cita Aceptada"; // Cambiar el texto del botón
                    this.disabled = true; // Deshabilitar el botón
                    this.style.display = "none"; // Esconder el botón
                    document.getElementById("ventanaEmergente").style.display = "block"; // Mostrar ventana emergente
                });
            });
        });

        // Función para cerrar la ventana emergente
        function cerrarVentana() {
            document.getElementById("ventanaEmergente").style.display = "none";
        }
    </script>

    <style>
        .doctor-dashboard {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #0b6975;
            border-radius: 8px;
            margin-top: 100px;
        }

        .appointments-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .appointments-table th,
        .appointments-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #1a1717;
        }

        .appointments-table th {
            background-color: #add6d344;
            font-weight: bold;
            color: #222222;
        }

        .appointments-table td {
            background-color: #add6d344;
        }

        .aceptar-boton {
            background-color: #4CAF50;
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .aceptar-boton:hover {
            background-color: #3b8e44;
        }

        .ventana-emergente {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 8px;
            color: white;
            text-align: center;
        }

        .contenido-ventana {
            background-color: #333;
            padding: 20px;
            border-radius: 8px;
        }

        .cerrar-boton {
            background-color: red;
            color: white;
            border: none;
            padding: 6px 12px;
            margin-top: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .cerrar-boton:hover {
            background-color: darkred;
        }
    </style>
</Layout>

---
import Layout from "../../layouts/Layout.astro"; // Importa el componente Layout desde la ruta especificada
---


<Layout title="Recepcionista">
    <!-- Usamos el componente Layout con el título "Recepcionista" -->
    <div class="reception-dashboard">
        <h2>Panel de Citas</h2>
        <table class="appointments-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Paciente</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Ejemplo de cita -->
                <tr>
                    <td>2024-11-10</td>
                    <td>09:00 AM</td>
                    <td>Carlos García</td>
                    <td>Pendiente</td>
                    <td>
                        <button class="confirm-button">Confirmar</button>
                        <button class="cancel-button">Cancelar</button>
                    </td>
                </tr>
                <tr>
                    <td>2024-11-10</td>
                    <td>10:30 AM</td>
                    <td>Lucía Fernández</td>
                    <td>Pendiente</td>
                    <td>
                        <button class="confirm-button">Confirmar</button>
                        <button class="cancel-button">Cancelar</button>
                    </td>
                </tr>
                <!-- Agrega más filas de citas aquí -->
            </tbody>
        </table>
    </div>
    
    <style>
        .reception-dashboard {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #0b6975;
            border-radius: 8px;
            margin-top: 100px;
        }

        .appointments-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .appointments-table th,
        .appointments-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #1a1717;
        }

        .appointments-table th {
            background-color: #add6d344;
            font-weight: bold;
            color: #222222;
        }

        .appointments-table td {
            background-color: #add6d344;
        }

        .confirm-button,
        .cancel-button {
            padding: 6px 12px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .confirm-button {
            background-color: #4CAF50; /* Verde para confirmar */
            color: white;
        }

        .cancel-button {
            background-color: #c72f2f; /* Rojo para cancelar */
            color: white;
        }

        .confirm-button:hover {
            background-color: #3b8e44;
        }

        .cancel-button:hover {
            background-color: #a02626;
        }
    </style>
</Layout>

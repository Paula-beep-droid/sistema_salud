---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Recepcionista">
    <div class="reception-dashboard">
        <h2>Panel de Citas</h2>
        <table class="appointments-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Paciente</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2024-11-10</td>
                    <td>09:00 AM</td>
                    <td>Carlos García</td>
                    <td>Pendiente</td>
                    <td>
                        <button class="confirm-button" id="confirm1">Confirmar</button>
                        <button class="cancel-button" id="cancel1">Cancelar</button>
                    </td>
                </tr>
                <tr>
                    <td>2024-11-10</td>
                    <td>10:30 AM</td>
                    <td>Lucía Fernández</td>
                    <td>Pendiente</td>
                    <td>
                        <button class="confirm-button" id="confirm2">Confirmar</button>
                        <button class="cancel-button" id="cancel2">Cancelar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modales -->
    <div id="modalDetalles" class="ventana-emergente">
        <div class="contenido-ventana">
            <h3>Detalles de la Cita</h3>
            <p id="detallesCita"></p>
            <button onclick="cerrarVentana('modalDetalles')" class="cerrar-boton">Cerrar</button>
        </div>
    </div>

    <div id="modalCancelar" class="ventana-emergente">
        <div class="contenido-ventana">
            <p id="mensajeCancelar"></p>
            <button onclick="cerrarVentana('modalCancelar')" class="cerrar-boton">Cancelar</button>
            <button onclick="confirmarCancelacion()" class="confirmar-boton">Confirmar Cancelación</button>
        </div>
    </div>

    <div id="modalCancelacionConfirmada" class="ventana-emergente">
        <div class="contenido-ventana">
            <h3>Cancelación Confirmada</h3>
            <p>La cita ha sido cancelada exitosamente.</p>
            <button onclick="cerrarVentana('modalCancelacionConfirmada')" class="cerrar-boton">Cerrar</button>
        </div>
    </div>

    <script is:inline>
        document.addEventListener("DOMContentLoaded", () => {
            function mostrarDetallesCita(paciente, especialidad, fecha, hora) {
                const detalles = `Paciente: ${paciente} <br> Especialidad: ${especialidad} <br> Fecha: ${fecha} <br> Hora: ${hora}`;
                document.getElementById('detallesCita').innerHTML = detalles;
                document.getElementById('modalDetalles').style.display = 'block';
            }

            function confirmarCancelacion(paciente) {
                document.getElementById('mensajeCancelar').innerText =
                    `¿Estás seguro de cancelar la cita de ${paciente}?`;
                document.getElementById('modalCancelar').style.display = 'block';
            }

            function cancelarCita() {
                // Mostrar el mensaje de cancelación confirmada
                document.getElementById('modalCancelar').style.display = 'none';
                document.getElementById('modalCancelacionConfirmada').style.display = 'block';
            }

            function cerrarVentana(modalId) {
                document.getElementById(modalId).style.display = 'none';
            }

            // Asignación de eventos a los botones
            document.getElementById('confirm1').addEventListener('click', () => {
                mostrarDetallesCita('Carlos García', 'Cardiólogo', '2024-11-10', '09:00 AM');
            });
            document.getElementById('cancel1').addEventListener('click', () => {
                confirmarCancelacion('Carlos García');
            });

            document.getElementById('confirm2').addEventListener('click', () => {
                mostrarDetallesCita('Lucía Fernández', 'Pediatra', '2024-11-10', '10:30 AM');
            });
            document.getElementById('cancel2').addEventListener('click', () => {
                confirmarCancelacion('Lucía Fernández');
            });

            // Botones para cerrar las ventanas modales
            const closeButtons = document.querySelectorAll('.cerrar-boton');
            closeButtons.forEach(button => {
                button.addEventListener('click', (e) => {
                    const modalId = e.target.closest('.ventana-emergente').id;
                    cerrarVentana(modalId);
                });
            });
        });
    </script>

    <style>
        .reception-dashboard {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #0b6975;
            border-radius: 8px;
            margin-top: 100px;
        }

        .appointments-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .appointments-table th,
        .appointments-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #1a1717;
        }

        .appointments-table th {
            background-color: #add6d344;
            font-weight: bold;
            color: #222222;
        }

        .appointments-table td {
            background-color: #add6d344;
        }

        .confirm-button,
        .cancel-button {
            padding: 6px 12px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .confirm-button {
            background-color: #4CAF50;
            color: white;
        }

        .cancel-button {
            background-color: #c72f2f;
            color: white;
        }

        .confirm-button:hover {
            background-color: #3b8e44;
        }

        .cancel-button:hover {
            background-color: #a02626;
        }

        .ventana-emergente {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 8px;
            color: white;
            text-align: center;
        }

        .contenido-ventana {
            background-color: #333;
            padding: 20px;
            border-radius: 8px;
        }

        .cerrar-boton {
            background-color: red;
            color: white;
            border: none;
            padding: 6px 12px;
            margin-top: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .cerrar-boton:hover {
            background-color: darkred;
        }

        .confirmar-boton {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 6px 12px;
            margin-top: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .confirmar-boton:hover {
            background-color: #3b8e44;
        }
    </style>
</Layout>

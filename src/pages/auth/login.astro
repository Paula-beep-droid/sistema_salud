---
import Layout from "../../layouts/Layout.astro"; // Importa el componente Layout desde la ruta especificada
---

<Layout title="Admin">
    <!-- Usamos el componente Layout con el título "Admin" -->
    <div class="doctor-dashboard">
        <h2>Panel de Citas</h2>
        <table class="appointments-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Paciente</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Ejemplo de cita -->
                <tr>
                    <td>2024-11-10</td>
                    <td>10:00 AM</td>
                    <td>Juan Pérez</td>
                    <td>Confirmado</td>
                    <td>
                        <button class="edit-button">Editar</button>
                        <button class="delete-button">Eliminar</button>
                    </td>
                </tr>
                <tr>
                    <td>2024-11-10</td>
                    <td>11:00 AM</td>
                    <td>Maria López</td>
                    <td>Pendiente</td>
                    <td>
                        <button class="edit-button">Editar</button>
                        <button class="delete-button">Eliminar</button>
                    </td>
                </tr>
                <!-- Agrega más filas de citas aquí -->
            </tbody>
        </table>
    </div>
    
    <style>
        .doctor-dashboard {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #0b6975;
            border-radius: 8px;
            margin-top: 100px;
        }
    
        .appointments-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            

        }
    
        .appointments-table th,
        .appointments-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #1a1717;
            margin-top: 100px;
        }
    
        .appointments-table th {
            background-color: #add6d344;
            font-weight: bold;
            color: #222222;
            margin-top: 100px;
        }
    
        .appointments-table td {
            background-color: #add6d344;
        }
    
        .edit-button,
        .delete-button {
            padding: 6px 12px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    
        .edit-button {
            background-color: #add6d344;
            color: white;
        }
    
        .delete-button {
            background-color: #c72f2f;
            color: white;
        }
    
        .edit-button:hover {
            background-color: #07585c;
        }
    
        .delete-button:hover {
            background-color: #a02626;
        }
    </style>
    
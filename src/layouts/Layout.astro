---
interface Props {
	title: string; // Define la interfaz Props con una propiedad title de tipo string
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<!-- Define el idioma del documento como ingl茅s -->
	<head>
		<meta charset="UTF-8" />
		<!-- Establece la codificaci贸n de caracteres en UTF-8 -->
		<meta name="description" content="Astro description" />
		<!-- Descripci贸n del sitio web -->
		<meta name="viewport" content="width=device-width" />
		<!-- Establece el viewport para responsividad -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- Enlaza el favicon -->
		<meta name="generator" content={Astro.generator} />
		<!-- Incluye informaci贸n del generador Astro -->
		<title>{title}</title>
		<!-- T铆tulo del documento, din谩mico basado en las props -->
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
		/>
		<!-- Enlaza a la hoja de estilos de Bootstrap Icons -->
		<link rel="stylesheet" href="./css/main.css" />
		<!-- Enlaza a la hoja de estilos local main.css -->
	</head>
	<body>
		<header>
			<button id="abrir" class="abrir-menu"
				><i class="bi bi-list"></i></button
			>
			<nav class="nav" id="nav">
				<button class="cerrar-menu" id="cerrar"
					><i class="bi bi-x"></i></button
				>
				<ul class="nav-list">
					<li><a href="/">Home</a></li>
					<li><a href="/cuenta"></a></li>
				</ul>
			</nav>
		</header>

		<script src="/src/js/main.js" type="module"></script>

		<slot />

		<footer>
			<p>&copy Plataforma de Gesti贸n de Datos</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	body {
		font-family: Arial, sans-serif;
		background-color: #add6d344;
		color: white;
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.nav-list a {
		color: #0b6975;
		text-decoration: none;
		margin-left: 10px;
		display: inline;
	}
	.nav-list a:hover {
		text-decoration: underline;
	}

	header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		justify-content: flex-end;
		padding: 1rem;
		background-color: rgba(10, 128, 108, 0.644);
	}

	.nav-list {
		list-style-type: none;
		display: flex;
		gap: 1rem;
		padding: 1em;
	}

	.abrir-menu,
	.cerrar-menu {
		display: none;
	}

	@media screen and (max-width: 550px) {
		.abrir-menu,
		.cerrar-menu {
			display: block;
			border: 0;
			font-size: 1.25rem;
			background-color: transparent;
			cursor: pointer;
		}

		.abrir-menu {
			color: white;
		}

		.cerrar-menu {
			color: blue;
		}

		.nav {
			opacity: 0;
			visibility: hidden;
			display: flex;
			flex-direction: column;
			align-items: end;
			gap: 1rem;
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			background-color: #12b0c2;
			padding: 2rem;
			box-shadow: 0 0 0 100vmax rgba(0, 0, 0, 0.5);
		}

		.nav.visible {
			opacity: 1;
			visibility: visible;
		}

		.nav-list {
			flex-direction: column;
			align-items: end;
		}

		.nav-list li a {
			color: blue;
		}
	}

	input {
		color: #333;
	}

	footer {
		background-color: #0b6975;
		color: rgba(255, 255, 255, 0.795);
		padding: 1em;
		text-align: center;
		margin: auto auto 0 auto;
		width: 100%;
	}

	footer p {
		margin-bottom: 20px;
	}

	footer h3 {
		font-weight: bold;
	}

	footer .enlaces {
		display: flex;
		justify-content: center;
		margin-top: 1em;
		flex-wrap: wrap;
		gap: 1em;
	}
	footer a {
		color: yellow;
		text-decoration: none;
	}
	footer a:hover {
		text-decoration: underline;
	}
</style>
